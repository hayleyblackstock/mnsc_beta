<div class="row">
   <div class="col-md-6 col-md-offset-3">
    <h1 align="center"> Forgot Password? </h1>
    <p align="center">
      Enter your email address below and instructions will be emailed to you to reset your password.
    </p>
  </div>
</div>


<%= form_tag password_resets_path, :method => :post do %>
<div class="field">
  <div class="form-group">
     <div class="col-md-6 col-md-offset-3">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
<br>
    <div class="actions"> <%= submit_tag "Reset Password", class: "btn btn-primary" %></div>
</div>
</div>
</div>
<% end %>

</div>
</div>
