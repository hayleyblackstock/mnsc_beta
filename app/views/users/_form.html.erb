<% if @user.errors.any? %>
<div id="error_explanation">
  <div class ="alert alert-danger"><h4> <%= pluralize(@user.errors.count, "error") %> prohibited from being saved:</h4>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= form_for @user do |f| %>
<form>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city  %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="form-group">
    <%= f.label :zip_code %>
    <%= f.number_field :zip_code %>
  </div>

  <div class="form-group">
    <%= f.label :entry_code %>
    <%= f.text_field :entry_code %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>

  <div class="form-group">
    <%= f.label :profile_picture %>
    <%= f.url_field :profile_picture %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
</form>
<% end %>
