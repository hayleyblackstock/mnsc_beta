<div class="page-header">
  <div class="container">
<h1> Sign up for Monday Night Supper Club </h1>
</div>
</div>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<%= form_for @user, url: signup_path, class:"form-horizontal"  do |f| %>
<%= f.label :first_name, class:"control-label"  %>
<%= f.text_field :first_name, class:"form-control" %>

<%= f.label :last_name, class:"control-label" %>
<%= f.text_field :last_name, class:"form-control" %>

<%= f.label :email, class:"control-label" %>
<%= f.email_field :email, class:"form-control" %>

<%= f.label :phone_number, class:"control-label" %>
<%= f.telephone_field :phone_number, class:"form-control" %>

<%= f.label :address, class:"control-label" %>
<%= f.text_field :address, class:"form-control" %>

<%= f.label :unit, class:"control-label" %>
<%= f.text_field :unit, class:"form-control" %>

<%= f.label :city, class:"control-label" %>
<%= f.text_field :city, class:"form-control" %>

<%= f.label :state, class:"control-label" %>
<%= f.text_field :state, class:"form-control" %>

<%= f.label :zip_code, class:"control-label" %>
<%= f.text_field :zip_code, class:"form-control" %>

<%= f.label :entry_code, class:"control-label" %>
<%= f.text_field :entry_code, class:"form-control" %>

<%= f.label :birthday, class:"control-label" %>
<%= f.date_select :birthday, class:"form-control" %>

<%= f.label :password, class:"control-label" %>
<%= f.password_field :password, class:"form-control" %>

<%= f.label :password_confirmation, class:"control-label" %>
<%= f.password_field :password_confirmation, class:"form-control" %>

<%= f.submit class:"btn btn-primary"  %>
<% end %>
